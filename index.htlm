    <!-- Structure pour l'initialisation Firebase et Logique de Commande -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, setLogLevel, collection, addDoc, query, where, onSnapshot } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // IMPORTANT : Utilisation des variables globales fournies par l'environnement
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        let firebaseConfig;
        try {
            firebaseConfig = JSON.parse(typeof __firebase_config !== 'undefined' ? __firebase_config : '{}');
        } catch (e) {
            console.error("Erreur de parsing de __firebase_config:", e);
            firebaseConfig = {};
        }
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;

        let app, db, auth;
        let userId = 'unknown_user';
        let isAuthReady = false;

        if (Object.keys(firebaseConfig).length > 0) {
            try {
                // Initialisation de Firebase
                app = initializeApp(firebaseConfig);
                db = getFirestore(app);
                auth = getAuth(app);
                setLogLevel('Debug'); // Afficher les logs de debug

                // Authentification
                const attemptAuth = async () => {
                    try {
                        if (initialAuthToken) {
                            await signInWithCustomToken(auth, initialAuthToken);
                        } else {
                            await signInAnonymously(auth);
                        }
                    } catch (error) {
                        console.error("Erreur d'authentification:", error);
                    }
                };

                onAuthStateChanged(auth, (user) => {
                    if (user) {
                        userId = user.uid;
                        console.log("Utilisateur connect√© ID:", userId);
                        const userIdDisplay = document.getElementById('userIdDisplay');
                        if (userIdDisplay) {
                            userIdDisplay.textContent = `ID Utilisateur: ${userId}`;
                        }
                    } else {
                        // Utiliser un ID al√©atoire si d√©connect√©/anonyme non r√©ussi, m√™me si les r√®gles n'autorisent pas.
                        // Cependant, l'ID r√©el pour la lecture sera null si non authentifi√©. On utilise l'UID s'il existe.
                        userId = auth.currentUser?.uid || crypto.randomUUID(); 
                        console.log("Utilisateur non authentifi√© (ou ID g√©n√©r√©):", userId);
                    }
                    isAuthReady = true;
                    // D√©marrer le chargement des commandes d√®s que l'ID utilisateur est √©tabli
                    if (db && userId) {
                         // AJUSTEMENT: Lancement avec un petit d√©lai pour assurer la stabilit√© de l'UID
                         // avant que la requ√™te onSnapshot ne d√©marre.
                         setTimeout(loadUserOrders, 500); 
                    }
                });

                attemptAuth(); // Lancer l'authentification

            } catch (error) {
                console.error("Erreur lors de l'initialisation de Firebase:", error);
            }
        }
        
        /**
         * Ouvre la modale de commande et pr√©-remplit les champs cach√©s.
         * @param {string} productId - ID unique du produit (ex: 'montre').
         * @param {string} productName - Nom affich√© du produit (ex: 'Montre Intelligente Sportive').
         */
        window.openOrderModal = (productId, productName) => {
            document.getElementById('modal-product-name').textContent = productName;
            document.getElementById('modal-product-id').value = productId;
            document.getElementById('modal-product-title').value = productName;
            document.getElementById('order-modal').classList.add('modal-active');
            document.getElementById('modal-message').textContent = ''; // Clear previous message
        };

        /**
         * Ferme la modale de commande.
         */
        window.closeOrderModal = () => {
            document.getElementById('order-modal').classList.remove('modal-active');
        };

        /**
         * Place la commande en l'enregistrant dans Firestore (simulation d'envoi √† Wanslu).
         */
        window.placeOrder = async (event) => {
            event.preventDefault();
            
            if (!isAuthReady || userId === 'unknown_user') {
                document.getElementById('modal-message').textContent = "Authentification en cours, veuillez r√©essayer.";
                return;
            }

            const productId = document.getElementById('modal-product-id').value;
            const productName = document.getElementById('modal-product-title').value;
            const quantity = parseInt(document.getElementById('quantity').value, 10);
            const address = document.getElementById('delivery-address').value.trim();

            const messageElement = document.getElementById('modal-message');
            messageElement.className = 'text-center mt-4 text-sm font-semibold';

            if (quantity <= 0 || !address) {
                messageElement.textContent = "Veuillez entrer une quantit√© valide et une adresse de livraison.";
                messageElement.classList.add('text-red-600');
                return;
            }

            const orderData = {
                productId: productId,
                productName: productName,
                quantity: quantity,
                deliveryAddress: address,
                userId: userId,
                appId: appId,
                timestamp: new Date(),
                status: 'Commande re√ßue par YingYang (En attente de transmission √† Wanslu)',
                // Simule l'int√©gration d'affiliation pour le suivi
                wansluRef: 'YingYang' 
            };

            const loader = document.getElementById('modal-loader');
            loader.classList.remove('hidden');
            document.getElementById('order-submit-btn').disabled = true;

            try {
                // Chemin de collection pour les commandes publiques partag√©es (si YingYang g√®re le traitement)
                const ordersCollectionRef = collection(db, `artifacts/${appId}/public/data/orders`);
                
                // Sauvegarde de la commande
                await addDoc(ordersCollectionRef, orderData);

                // Succ√®s
                messageElement.textContent = `F√©licitations ! Votre commande de ${quantity} x "${productName}" a √©t√© enregistr√©e. Elle est automatiquement transmise √† Wanslu Shop √† l'adresse fournie.`;
                messageElement.classList.remove('text-red-600');
                messageElement.classList.add('text-green-600');
                
                // Optionnel: Vider le formulaire apr√®s succ√®s
                document.getElementById('order-form').reset();
                document.getElementById('modal-product-id').value = productId; // Keep hidden ID for context
                document.getElementById('modal-product-title').value = productName; 
                
                // Fermer la modal apr√®s un court d√©lai pour que l'utilisateur lise le message de succ√®s
                setTimeout(closeOrderModal, 3000);

            } catch (e) {
                console.error("Erreur lors du placement de la commande (Firestore): ", e);
                messageElement.textContent = "Erreur: Impossible de passer la commande. Veuillez v√©rifier votre connexion.";
                messageElement.classList.remove('text-green-600');
                messageElement.classList.add('text-red-600');
            } finally {
                loader.classList.add('hidden');
                document.getElementById('order-submit-btn').disabled = false;
            }
        };

        // Fermer la modal en cliquant en dehors
        document.addEventListener('DOMContentLoaded', () => {
            const modal = document.getElementById('order-modal');
            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    closeOrderModal();
                }
            });
        });

        // --- Logique de Suivi des Commandes ---

        /**
         * Met √† jour dynamiquement la liste des commandes de l'utilisateur.
         */
        const renderOrders = (orders) => {
            const container = document.getElementById('orders-list-container');
            if (!container) return;
            
            if (orders.length === 0) {
                container.innerHTML = `
                    <div class="text-center p-8 bg-white rounded-lg shadow-inner border border-gray-200">
                        <p class="text-lg text-gray-600">Vous n'avez pas encore de commandes enregistr√©es via YingYang.</p>
                        <a href="#produits" class="text-indigo-600 font-medium mt-2 inline-block hover:text-indigo-800 transition duration-150">Commencez √† commander ici.</a>
                    </div>
                `;
                return;
            }

            container.innerHTML = orders.map(order => {
                // S'assurer que timestamp est un objet Date ou est converti
                const date = order.timestamp && order.timestamp.toDate ? order.timestamp.toDate() : new Date();
                const formattedDate = date.toLocaleDateString('fr-FR', {
                    year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit'
                });
                
                // D√©finir la couleur du statut
                let statusColor = 'bg-gray-200 text-gray-800';
                if (order.status.includes('re√ßue') || order.status.includes('En attente')) {
                    statusColor = 'bg-yellow-100 text-yellow-800';
                } else if (order.status.includes('transmise') || order.status.includes('traitement')) {
                    statusColor = 'bg-blue-100 text-blue-800';
                } else if (order.status.includes('livraison') || order.status.includes('exp√©di√©e')) {
                    statusColor = 'bg-green-100 text-green-800';
                } else if (order.status.includes('annul√©e') || order.status.includes('√©chec')) {
                    statusColor = 'bg-red-100 text-red-800';
                }

                return `
                    <div class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-indigo-500 hover:shadow-xl transition duration-200 mb-6">
                        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-3">
                            <h4 class="text-xl font-bold text-indigo-700">${order.productName} <span class="text-gray-500 font-normal text-base">x${order.quantity}</span></h4>
                            <span class="mt-2 sm:mt-0 px-3 py-1 text-xs font-semibold rounded-full ${statusColor}">${order.status}</span>
                        </div>
                        <div class="text-sm text-gray-600 space-y-1 mt-3">
                            <p><strong>Date:</strong> ${formattedDate}</p>
                            <p><strong>ID Commande:</strong> ${order.orderId.substring(0, 8)}...</p>
                            <p><strong>Livraison:</strong> <span class="text-gray-900 font-medium">${order.deliveryAddress}</span></p>
                            <p class="text-xs italic text-gray-500">R√©f√©rence Wanslu: ${order.wansluRef}</p>
                        </div>
                    </div>
                `;
            }).join('');
        };

        /**
         * √âcoute en temps r√©el les commandes de l'utilisateur connect√©.
         */
        const loadUserOrders = () => {
            // CORRECTION: AJOUT d'une v√©rification stricte pour s'assurer que userId est pr√™t
            if (!db || !userId || userId === 'unknown_user') {
                 console.log("Impossible de charger les commandes: DB ou UserID non pr√™t.");
                 // Optionnel: Mettre un message √† l'utilisateur si l'ID n'est pas pr√™t
                 document.getElementById('orders-list-container').innerHTML = `
                    <div class="text-center p-8 bg-yellow-50 rounded-lg shadow-inner border border-yellow-200">
                        <p class="text-lg text-yellow-700">Veuillez patienter pendant l'initialisation de l'utilisateur pour afficher vos commandes.</p>
                    </div>
                 `;
                 return;
            }

            const ordersCollectionRef = collection(db, `artifacts/${appId}/public/data/orders`);
            
            // Requ√™te pour filtrer uniquement les commandes de l'utilisateur actuel
            const userOrdersQuery = query(ordersCollectionRef, where('userId', '==', userId));

            // √âcoute en temps r√©el
            onSnapshot(userOrdersQuery, (snapshot) => {
                const orders = [];
                snapshot.forEach(doc => {
                    orders.push({
                        orderId: doc.id,
                        ...doc.data()
                    });
                });
                
                // Tri par date de la plus r√©cente √† la plus ancienne
                orders.sort((a, b) => {
                    const timeA = a.timestamp && a.timestamp.toMillis ? a.timestamp.toMillis() : 0;
                    const timeB = b.timestamp && b.timestamp.toMillis ? b.timestamp.toMillis() : 0;
                    return timeB - timeA;
                });

                renderOrders(orders);
            }, (error) => {
                // Affichage de l'erreur pour l'utilisateur
                console.error("Erreur lors de l'√©coute des commandes:", error);
                document.getElementById('orders-list-container').innerHTML = `<p class="text-red-500 text-center p-4 bg-red-100 rounded-lg border border-red-300">
                    Erreur de chargement des commandes. ${error.message}. <br> V√©rifiez l'authentification et les r√®gles de s√©curit√©.
                </p>`;
            });
        };
        

    </script>

